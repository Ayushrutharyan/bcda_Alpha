<!DOCTYPE html>
<html>
  <head>
	<!--Import Google Icon Font-->
	<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
	<!--Import materialize.css-->
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">

	

	<!--Let browser know website is optimized for mobile-->
	<meta name="viewport" content="width=device-width, initial-scale=1.0"/>

	
  </head>

  <body>

	<nav>
		<div class="nav-wrapper #2196f3 blue">
		  <a href="#" class="brand-logo center"><i class="material-icons">cloud_download</i>BCDA Data Fetch API</a>
		  <ul id="nav-mobile" class="left hide-on-med-and-down">
			<li><a href="#">Home</a></li>
		  </ul>
		</div>
	  </nav>

	  <div class="container" style="margin-top:4% ;">
		<div class="container">
			<div class="row">
				<div class="col s12">
					<h3>Select File Download Options:</h3>
				</div>
			</div>
		</div>	
      <div class="container">
		<div class="row">
			<form class="col s12" method="POST" action="/selection/downloadOptions">
                
                <div class="row">

					<div class="input-field col s3">
						<p>Select endpoint: </p>
					</div>


					<div class="input-field col s3">
						<label> 
							<input type="radio" name="Endpoint" value="patient" onclick="EnableDisableRunout()"/>
							<span>/Patient</span>
						  </label>
					</div>
					<div class="input-field col s3">
						<label> 
							<input type="radio" name="Endpoint" value="group" id="groupEndpoint" onclick="EnableDisableRunout()"/>
							<span>/Group</span>
						  </label>
					</div>
				</div>


				<div class="row">

					<div class="input-field col s3">
						<p>Select files to download: </p>
					</div>


					<div class="input-field col s3">
						<label> 
							<input type="checkbox" name="Patient" value="Patient"/>
							<span>Patient</span>
						  </label>
					</div>
					<div class="input-field col s3">
						<label> 
							<input type="checkbox" name="Coverage" value="Coverage"/>
							<span>Coverage</span>
						  </label>
					</div>
					<div class="input-field col s3">
						<label> 
							<input type="checkbox" name="EOB" value="ExplanationOfBenefit"/>
							<span>Explanation Of Benefit</span>
						  </label>
					</div>
				</div>

                <div class="row">

					<div class="input-field col s3">
						<p>Runout: </p>
					</div>


					<div class="input-field col s3">
						<label> 
							<input type="checkbox" name="Runout" id="runout" disabled/>
							<span>Runout</span>
						  </label>
					</div>
				</div>


				<div class="row">

					<div class="input-field col s3">
						<p>Type of Download: </p>
					</div>


					<div class="input-field col s3">
						<label for="completeDownload"> 
							<input type="radio" name="downloadOption" id="completeDownload" onclick="EnableDisableTextBox()" value="complete" checked/>
							<span>Complete Download</span>
						  </label>
					</div>
					<div class="input-field col s3">
						<label for="partialDownload"> 
							<input type="radio" name="downloadOption" id="partialDownload" onclick="EnableDisableTextBox()" value="partial"/>
							<span>Download files after a date</span>
						  </label>
					</div>
				</div>
 

				<div class="row">
					<div class="input-field col s4">
						<p>Date:
 							<input class="datepicker" type="text" name="since" id ="since" placeholder="yyyy-mm-dd" disabled/>
						</p>
					</div>
				
					<div class="input-field col s4">
						<p>Time:
 							<input type="text" class="timepicker" name="sinceTime" id ="sinceTime" placeholder="hh:mm AM/PM" disabled/>
						</p>
					</div>

					<div class="input-field col s4">
						<p >Timezone:
							<input type="text" name="timeZone" id="timeZone" placeholder="+/-zz:zz" disabled/>
						</p>
					</div>
				</div>	

			  

				<div class="row">
					<div class="input-field col s12">
						<button class="btn waves-effect waves-light" type="submit" >Proceed
							<i class="material-icons right">send</i>
						  </button>
					</div>
				</div>

			  
			</form>
		  </div>
        </div>
      </div>
	</div>

	  <script type="text/javascript">
		function EnableDisableTextBox() {
			var partialDownload = document.getElementById("partialDownload");
			var since = document.getElementById("since");
			var sinceTime = document.getElementById("sinceTime");
			var timeZone = document.getElementById("timeZone");
			since.disabled = partialDownload.checked ? false : true;
			sinceTime.disabled = partialDownload.checked ? false : true;
			timeZone.disabled = partialDownload.checked ? false : true;
			
		}

        function EnableDisableRunout() {
			var groupEndpoint = document.getElementById("groupEndpoint");
			var runout = document.getElementById("runout");
			runout.disabled = groupEndpoint.checked ? false : true;
		}
	</script>



	<!--JavaScript at end of body for optimized loading-->
	<script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>

	<script>
		document.addEventListener('DOMContentLoaded', function() {
		var elems = document.querySelectorAll('.datepicker');
		var instances = M.Datepicker.init(elems, {
			format: 'yyyy-mm-dd'
		});

		var timePick = document.querySelector('.timepicker');
		var instances = M.Timepicker.init(timePick, {
			twelvehour: false
		});

  });
	</script>

	
  </body>
</html>